@model CRUD.Models.ViewModel.LoginSignUpViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

<div class="container">
    <div class="row mt-lg-5">
        <div class="col-4 offset-4 border border-primary rounded pl-5 pr-5 pb-5">
            <div class="text-center pt-3">
                <h1 class="text-info">Login Form</h1>
            </div>
            <div class="text-center pb-2 pt-3">
                <label class="text-black">Not registered yet?</label>
                <a class="btn btn-outline-primary fw-bold" asp-action="SignUp" asp-controller="Account">Sign Up Now</a>
            </div>
            <h5 class="text-success text-center">@TempData["successMSG"]</h5>
            <form method="post" asp-action="Login">
                <div class="form-group">
                    <label asp-for="Username"></label>
                    <input type="text" asp-for="Username" placeholder="Enter Username" class="form-control" autocomplete="off" />
                    <span class="text-danger">@TempData["errorName"]</span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input id="password" type="password" asp-for="Password" placeholder="Enter Password" class="form-control" />
                    <span class="text-danger">@TempData["errorPass"]</span>
                </div>
                <div class="form-group">
                    <input type="checkbox" asp-for="IsRemember"/>
                    <label asp-for="IsRemember"></label>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-block btn-md btn-primary mb-2 " value="Log In" />
                </div>
            </form>
            <div class="text-center">
                <label class="text-black">Forgot Password ?</label>
                <a class="text-primary fw-bold" asp-action="ForgotPass">Click Here!</a>
            </div>
        </div>
    </div>
</div>

<script src="~\lib\jquery\dist\jquery.js"></script>
<script src="~\lib\jquery\dist\jquery.min.js"></script>
